{
  "name": "daily-pick",
  "version": "1.0.0",
  "description": "Daily pick slack app",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "repository": "https://github.com/richardaum/daily-pick",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "start": "run-s start:migration start:bot",
    "start:bot": "NODE_ENV=production node build/main/index.js",
    "start:migration": "ts-node-dev --inspect -- src/services/migration/migrate.ts | bunyan -L",
    "dev": "NODE_ENV=development ts-node-dev --inspect -- src/index.ts | bunyan -L",
    "build": "run-p build:*",
    "build:main": "tsc -p tsconfig.build.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "lint": "echo \"OK\"",
    "test": "run-s build test:*",
    "test:lint": "eslint src --ext .ts",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "check-cli": "run-s test diff-integration-tests check-integration-tests",
    "check-integration-tests": "run-s check-integration-test:*",
    "diff-integration-tests": "mkdir -p diff && rm -rf diff/test && cp -r test diff/test && rm -rf diff/test/test-*/.git && cd diff && git init --quiet && git add -A && git commit --quiet --no-verify --allow-empty -m 'WIP' && echo '\\n\\nCommitted most recent integration test output in the \"diff\" directory. Review the changes with \"cd diff && git diff HEAD\" or your preferred git diff viewer.'",
    "watch:build": "tsc -p tsconfig.json -w",
    "version": "standard-version",
    "reset-hard": "git clean -dfx && git reset --hard && yarn",
    "prepare-release": "run-s reset-hard test cov:check doc:html version doc:publish"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "@sentry/node": "^7.81.1",
    "@sentry/tracing": "^7.81.1",
    "@slack/bolt": "^3.15.0",
    "axios": "^1.6.2",
    "bunyan": "^1.8.15",
    "cron-parser": "^4.9.0",
    "dotenv-flow": "^4.0.1",
    "firebase-admin": "^11.11.0",
    "lodash": "^4.17.21",
    "luxon": "^3.4.4",
    "node-schedule": "^2.1.1",
    "pg": "^8.11.3",
    "postgres-migrations": "^5.3.0",
    "slack-block-builder": "^2.7.2",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^9.0.1",
    "verror": "^1.10.1"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.8",
    "@types/lodash": "^4.14.189",
    "@types/luxon": "^2.0.8",
    "@types/node": "^20.9.4",
    "@types/node-schedule": "^1.3.2",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.4",
    "@types/verror": "^1.10.6",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^3.0.2",
    "eslint-plugin-import": "^2.22.0",
    "ngrok": "^4.3.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "standard-version": "^9.0.0",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.1.8",
    "type-fest": "^3.1.0",
    "typescript": "^4.9.5"
  },
  "files": [
    "build/main",
    "build/module",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  }
}
